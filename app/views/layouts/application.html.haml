!!! 5
%html{ :lang => "en"}
  %head{:prefix => "og: http://ogp.me/ns#"}
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    = display_meta_tags

    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyA_C7hQIHn3LK83BsLKrcMLN069o3u7j0M&v=3.13&sensor=false&libraries=places,geometry"
    = favicon_link_tag "favicon.ico"
    = csrf_meta_tag
    =yield :head


  %body
    .notice=notice
    .alert=alert
    =render :partial => 'shared/head'
    #content
      =yield

    =render :partial => 'shared/footer'
:javascript
  if($('.notice').text().length == 0) {
    $('.notice').remove();
  }
  if($('.alert').text().length == 0) {
    $('.alert').remove();
  }
  //remove flash messages after 5 seconds

  $(document).ready(function(){
    setTimeout(function(){
      $('.notice').remove();
      $('.alert').remove();
    }, 4000);
   })
